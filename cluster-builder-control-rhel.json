{
  "variables": 
  {
    "rhel_lic": ""
  },

  "provisioners": [
    {
      "type": "file",
      "source": "rhel7-setup.sh",
      "destination": "/tmp/rhel7-setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "sh '{{ .Path }}'",
      "inline": ["sudo bash /tmp/rhel7-setup.sh {{user `rhel_lic`}}"]
    },
    {
      "type": "file",
      "source": "http/bg.jpg",
      "destination": "/tmp/bg.jpg"
    },
    {
      "type": "shell",
      "execute_command": "echo 'admin' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/setup-rhel.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'admin' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/fontsel7.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'admin' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/vmware-tools.sh"
    },
    {
      "type": "file",
      "source": "keys/authorized_keys",
      "destination": "/tmp/authorized_keys"
    },     
    {
      "type": "file",
      "source": "cluster-builder-setup.html",
      "destination": "/home/admin/"
    },     
    {
      "type": "ansible-local",
      "playbook_file": "ansible/centos.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "-vvvvv"
    },
    {
      "type": "shell",
      "execute_command": "echo 'admin' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "inline": ["reboot"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'admin' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/zerodisk.sh"
    }  
  ],

  "post-processors": [{
      "type": "shell-local",
      "inline": [
          "ovftool --overwrite cluster-builder-control.vmwarevm/cluster-builder-control.vmx cluster-builder-control.ova"
      ]
  }],

  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-rhel.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 256000,
      "guest_os_type": "rhel7-64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/rhel-server-7.4-x86_64-dvd.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "431a58c8c0351803a608ffa56948c5a7861876f78ccbe784724dd8c987ff7000",
      "ssh_username": "admin",
      "ssh_password": "TempPass2017",
      "ssh_port": 22,
      "ssh_wait_timeout": "20000s",
      "shutdown_command": "echo 'admin'|sudo -S /sbin/halt -h -p",
      "output_directory": "cluster-builder-control.vmwarevm",
      "vm_name": "cluster-builder-control",
      "vmx_template_path": "cluster-builder-control-template.vmx",
      "format": "ova",
      "vmx_data": {
        "memsize": "6144",
        "numvcpus": "2",
        "ethernet0.pciSlotNumber": "32"
      },
       "vmx_data_post": {
        "ethernet0.connectionType": "bridged"
      }
   }
  ]
}